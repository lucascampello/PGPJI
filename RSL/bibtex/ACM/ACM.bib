year = {2020},
isbn = {9781450375795},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3419249.3420133},
doi = {10.1145/3419249.3420133},
abstract = {Serious Games (SGs) have been widely used for educational purposes. However, there
is still a lack of standardised SG design models. Rather than creating these models
from scratch, established instructional design principles (IDPs) can be adopted so
as to ensure the efficacy of SGs. The use of IDPs may enable educators, who are well-informed
about the process of designing instructions, to be involved in designing SGs. In the
literature, several SG authoring tools that remove the need for programming have been
proposed. Nonetheless, the complex process of game design and development will still
impede the potential of authoring tools. To gain a deeper understanding of how IDPs
have been integrated in SG design models, we have conducted a systematic literature
review. With the use of four databases, 165 unique articles were retrieved. After
a meticulous filtering process, eight were critically analysed. Results thereof allowed
us to make informed recommendations on the integration of IDPs within SG authoring
tools.},
booktitle = {Proceedings of the 11th Nordic Conference on Human-Computer Interaction: Shaping Experiences, Shaping Society},
articleno = {46},
numpages = {12},
keywords = {systematic literature review, Serious games, authoring tools, education, instructional design},
location = {Tallinn, Estonia},
series = {NordiCHI '20}
}

@inbook{10.1145/1753326.1753521,
author = {Bardzell, Shaowen},
title = {Feminist HCI: Taking Stock and Outlining an Agenda for Design},
year = {2010},
isbn = {9781605589299},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1753326.1753521},
abstract = {Feminism is a natural ally to interaction design, due to its central commitments to
issues such as agency, fulfillment, identity, equity, empowerment, and social justice.
In this paper, I summarize the state of the art of feminism in HCI and propose ways
to build on existing successes to more robustly integrate feminism into interaction
design research and practice. I explore the productive role of feminism in analogous
fields, such as industrial design, architecture, and game design. I introduce examples
of feminist interaction design already in the field. Finally, I propose a set of femi-nist
interaction design qualities intended to support design and evaluation processes directly
as they unfold.},
booktitle = {Proceedings of the SIGCHI Conference on Human Factors in Computing Systems},
pages = {1301–1310},
numpages = {10}
}

