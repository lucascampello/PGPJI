@inproceedings{10.1145/2662253.2662352,
author = {Saavedra, Arturo Barajas and Rodr\'{\i}guez, Francisco J. \'{A}lvarez and Arteaga, Jaime Mu\~{n}oz and Salgado, Ren\'{e} Santaolaya and Ordo\~{n}ez, C\'{e}sar A. Collazos},
