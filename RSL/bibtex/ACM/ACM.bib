@inproceedings{10.1145/2994310.2994356,
author = {Scheja, Stephanie and Schmidt, Ralf and Masuch, Maic},
title = {Play-Persona: A Multifaceted Concept},
year = {2016},
isbn = {9781450343671},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2994310.2994356},
doi = {10.1145/2994310.2994356},
abstract = {Gamification is but the most recent concept in the history of designing game-like
applications for purposes other than pure entertainment. Prominent examples often
aim to motivate a specific target behavior or follow learning goals.Nonetheless, the
current practice of gamification often seems onesided regarding its motivational design
as reward structures dominate most examples. One reason might be the lack of an established,
holistic perspective on the user that informs the designer on personal, motivational
and game-related attributes and needs within the context.This paper introduces the
concept of a play-persona, that builds on multifaceted theories of personality psychology,
motivational psychology, game-design and user-centered design and a series of expert
interviews across this disciplines. Furthermore, an explorative study regarding correlations
between personality and play preferences was conducted. The resulting design-tool
is suggested to encourage strong and elaborated discussions on user's needs among
the design team, thus supporting the design process.},
booktitle = {Proceedings of the 20th International Academic Mindtrek Conference},
pages = {375–384},
numpages = {10},
keywords = {user-centered design, user models, user experience gamification, psychology, persona, motivation, game design, applied games},
location = {Tampere, Finland},
series = {AcademicMindtrek '16}
}

@inproceedings{10.1145/2072298.2072469,
author = {Mehm, Florian and Hardy, Sandro and G\"{o}bel, Stefan and Steinmetz, Ralf},
title = {Collaborative Authoring of Serious Games for Health},
