@inproceedings{10.1145/2693787.2693801,
author = {Kayali, Fares and Peters, Konrad and Reithofer, Andrea and Mateus-Berr, Ruth and Lehner, Zsuzsanna and Martinek, Daniel and Sprung, Manuel and Silbernagl, Marisa and Woelfle, Rebecca and Lawitschka, Anita and Hlavacs, Helmut},
