@inproceedings{10.1145/3084289.3084291,
author = {Aydin, Serdar},
title = {Decoding Kashgar: Participatory Digital Heritage Making via Digital Online Interaction and Gamification},
year = {2017},
isbn = {9781450350235},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3084289.3084291},
doi = {10.1145/3084289.3084291},
abstract = {Decoding Kashgar is a design-research study in the field of digital heritage that
brings together the fields of new media, cultural heritage, computer-aided architectural
design and game design. The primary objective of this research is to study active
participatory content making processes through interactive and online digital media.
It is aimed to develop a non-linear relationship between immersiveness, the role of
agency, and transformation of content and users' knowledge. The research investigates
the authenticity issue of virtual heritage environments deprived of physical connection
to the real object in order to answer what architectural elements of Kashgar is of
significance in terms of their indexicality which carries the core values of authenticity
around relations. The research analyses the hidden relationships between digitally
documented heritage elements. User-generated content is data-mined via association
rule mining methods in order to unveil (or decode) valuable relations between seemingly
unrelated data in a relational repository. Searching further relations between basic
