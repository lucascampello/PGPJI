year = {2015},
isbn = {9781450336468},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
abstract = {It is our great pleasure to welcome you to the 7th ACM SIGCHI Symposium on Engineering
Interactive Computing Systems --- EICS'15 held in Duisburg, Germany (23--26 June 2015).
