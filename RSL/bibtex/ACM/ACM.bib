@inproceedings{10.5555/2846738.2846747,
author = {Supsi, Witsarut and Benalie, Nassaree and Chonnaparamutt, Winai},
title = {Game Design for a Robotic Rehab System},
year = {2014},
publisher = {Singapore Therapeutic, Assistive &amp; Rehabilitative Technologies (START) Centre},
address = {Midview City, SGP},
abstract = {The methods and results of game and GUI design for a robotic rehabilitation system
are presented here. The overview of control modes, i.e. passive and active modes is
introduces. Then, the Game Design, especially for the passive mode, in presented.
Finally, the guideline to design a game for all ages is discussed. From preliminary
result of testing with a group of patients, the passive game should have the format
of Lucky Draw game that the user cannot guess what is the next reward. This type of
game format can be used with the passive game, which the robot supports the movement
without any effort from the user. Also, the elderly has different taste of game from
the younger group.},
