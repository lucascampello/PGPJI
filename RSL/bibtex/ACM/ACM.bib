month = jan,
articleno = {263},
numpages = {25},
keywords = {crowdsourcing, virtual organizations, ethnography, crowd working, organizations, massively multiplayer online role-playing games, gamification}
}

@inproceedings{10.1145/3235765.3235778,
author = {Salter, Anastasia and Blodgett, Bridget and Sullivan, Anne},
title = {"Just Because It's Gay?": Transgressive Design in Queer Coming of Age Visual Novels},
year = {2018},
isbn = {9781450365710},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3235765.3235778},
doi = {10.1145/3235765.3235778},
abstract = {While queer narratives have recently gained greater prominence and attention [35][51][48]
both in games and game studies, they still represent a tiny portion of the playable
romances available. Even fewer among these represent the potential of what Edmond
Chang [12] has referred to as "queergaming," or games which refuse to conform in their
narrative, mechanics, and modes of play to a cisgender, white, heteronormative gaze.
We argue that meaningful queergaming is impossible within the current norms and genres
of so-called AAA, or mainstream. It thus requires space and platforms dedicated to
transgressive game design, building on Aarseth's [1] framework of transgressive play.
To substantiate our argument, we use an examination of recent queer visual novels
built using Ren'Py and released on Itch.io, with a case study of most popular current
exemplar Butterfly Soup [32] alongside previous exemplars of queer romance in games.},
booktitle = {Proceedings of the 13th International Conference on the Foundations of Digital Games},
articleno = {22},
