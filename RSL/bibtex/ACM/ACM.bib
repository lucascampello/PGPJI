}

@inproceedings{10.1145/2799250.2799260,
author = {Steinberger, Fabius and Schroeter, Ronald and Lindner, Verena and Fitz-Walter, Zachary and Hall, Joshua and Johnson, Daniel},
title = {Zombies on the Road: A Holistic Design Approach to Balancing Gamification and Safe Driving},
year = {2015},
isbn = {9781450337366},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2799250.2799260},
doi = {10.1145/2799250.2799260},
abstract = {This paper explores novel driving experiences that make use of gamification and augmented
reality in the car. We discuss our design considerations, which are grounded in road
safety psychology and video game design theory. We aim to address the tension between
safe driving practices and player engagement. Specifically, we propose a holistic,
iterative approach inspired by game design cognition and share our insights generated
through the application of this process. We present preliminary game concepts that
blend digital components with physical elements from the driving environment. We further
highlight how this design process helped us to iteratively evolve these concepts towards
being safer while maintaining fun. These insights and game design cognition itself
will be useful to the AutomotiveUI community investigating similar novel driving experiences.},
booktitle = {Proceedings of the 7th International Conference on Automotive User Interfaces and Interactive Vehicular Applications},
pages = {320–327},
numpages = {8},
keywords = {gamification, driving games, serious games, design approach, road safety, augmented reality},
location = {Nottingham, United Kingdom},
