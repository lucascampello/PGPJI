@inproceedings{10.1145/2793107.2793109,
author = {Denisova, Alena and Cairns, Paul},
title = {The Placebo Effect in Digital Games: Phantom Perception of Adaptive Artificial Intelligence},
year = {2015},
isbn = {9781450334662},
