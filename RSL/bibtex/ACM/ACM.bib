}

@inbook{10.1145/3025453.3025564,
author = {Shannon, Amy and Sciuto, Alex and Hu, Danielle and Dow, Steven P. and Hammer, Jessica},
title = {Better Organization or a Source of Distraction? Introducing Digital Peer Feedback to a Paper-Based Classroom},
year = {2017},
isbn = {9781450346559},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3025453.3025564},
abstract = {Peer feedback is a central activity for project-based design education. The prevalence
of devices carried by students and the emergence of novel peer feedback systems enables
the possibility of collecting and sharing feedback immediately between students during
class. However, pen and paper is thought to be more familiar, less distracting for
students, and easier for instructors to implement and manage. To evaluate the efficacy
of in-class digital feedback systems, we conducted a within-subjects study with 73
students during two weeks of a game design course. After short student presentations,
while instructors provided verbal feedback, peers provided feedback either on paper
or through a device. The study found that both methods yielded comments of similar
quality and quantity, but the digital approach provided additional ways for students
to participate and required less effort from the instructors. While both methods produced
similar behaviors, students held inaccurate perceptions about their behavior with
each method. We discuss design implications for technologies to support in-class feedback
exchange.},
booktitle = {Proceedings of the 2017 CHI Conference on Human Factors in Computing Systems},
pages = {5545–5555},
numpages = {11}
}

@article{10.1145/3465616,
author = {Swearingen, Kyoung and Swearingen, Scott and Halac, Fede Camara and Ammannagari, Sruthi and Hall, Matt},
title = {The Woods: A Mixed-Reality Two-Player Cooperative Game},
year = {2021},
issue_date = {July 2021},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
volume = {4},
number = {2},
url = {https://doi.org/10.1145/3465616},
doi = {10.1145/3465616},
abstract = {While loneliness in our real lives is increasingly recognized as having dire physical,
mental, and emotional consequences, cooperative games have been shown to build empathy
and provide positive social impact. In this paper, the authors present "The Woods,"
a local cooperative, mixed-reality game using augmented reality and 4-channel audio
spatialization panning that provides players with face-to-face interactions in pursuit
of a shared goal. This paper discusses the narrative, mechanical, and sonic components
of the game, as well as the game's development process and the players' experiences.
The goal of our team is to develop a narrative-driven AR game that promotes collaborative
problem-solving and engages players in an emergent physical and digital experience.},
journal = {Proc. ACM Comput. Graph. Interact. Tech.},
month = aug,
articleno = {30},
numpages = {7},
keywords = {Multiplayer, Sonic Experience, Collaboration, Networked AR, Cooperative Game, Social Good, Mixed Reality}
}

