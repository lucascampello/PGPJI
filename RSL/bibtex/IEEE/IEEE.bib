@INPROCEEDINGS{8848023,
author={Santos, Carlos Pereira and van Gaans, Niels Cornelis Martinus Felicius and Khan, Vassilis-Javed and Markopoulos, Panos},
booktitle={2019 IEEE Conference on Games (CoG)}, title={Effects of advertisements and questionnaire interruptions on the player experience},
year={2019},
volume={},
