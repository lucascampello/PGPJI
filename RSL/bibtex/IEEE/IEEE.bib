@INPROCEEDINGS{8516516,
author={Tahmosybayat, Robin and Baker, Katherine and Godfrey, Alan and Caplan, Nick and Barry, Gill},
booktitle={2018 IEEE Games, Entertainment, Media Conference (GEM)}, title={Move Well: Design Deficits in Postural Based Exergames. What are We Missing?},
