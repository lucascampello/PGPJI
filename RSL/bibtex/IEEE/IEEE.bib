@INPROCEEDINGS{6363215,
author={Carli, Daniel Michelon De and Bevilacqua, Fernando and Tadeu Pozzer, Cesar and d'Ornellas, Marcos Cordeiro},
booktitle={2011 Brazilian Symposium on Games and Digital Entertainment}, title={A Survey of Procedural Content Generation Techniques Suitable to Game Development},
year={2011},
volume={},
number={},
