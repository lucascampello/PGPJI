@INPROCEEDINGS{9225880,
author={Kadel, Rajan and Paudel, Krishna and Gurung, Min Prasad},
booktitle={2019 IEEE International Conference on Engineering, Technology and Education (TALE)}, title={A Review on Educational Games Design, Development and Effectiveness Measurement},
year={2019},
volume={},
number={},
